<table class="table table-hover mt-5">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.full_name %></td>
        <td>
          <% if  current_user.friends_with(user) %>
            <%= link_to "Unfollow", friendship_path(user), method: :delete, class: 'btn btn-sm btn-danger' %>
          <% else %>
            <%= link_to "Follow", friendships_path(friend: user), method: :post, class: 'btn btn-sm btn-success' %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
