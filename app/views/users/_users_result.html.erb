<%= render 'layouts/partials/messages' %>
<% if @users %>
<div class="pt-5">
    <% @users.each do |user| %>
    <div class="card mt-2">
        <div class="card-body d-flex justify-content-between align-items-center">
            <div> <%= user.full_name %></div>
            <div>
                <%= link_to 'Profile', '#', class: "btn btn-xs btn-secondary" %>
                <%= link_to 'Follow', '#', class: "btn btn-xs btn-success", method: :post %>
            </div>
        </div>
    </div>
    <% end %>
</div>
<% end %>