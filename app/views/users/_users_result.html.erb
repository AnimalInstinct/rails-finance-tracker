<%= render 'layouts/partials/messages' %>
<% if @users %>
  <div class="pt-5">
    <% @users.each do |user| %>
      <div class="card mt-2">
        <div class="card-body d-flex justify-content-between align-items-center">
          <div> <%= user.full_name %></div>
          <div>
            <%= link_to 'Profile', '#', class: "btn btn-xs btn-secondary" %>
            <% if !current_user.friends_with(user) %>
              <%= link_to 'Follow', friendships_path(friend: user), class: "btn btn-xs btn-success", method: :post %>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
