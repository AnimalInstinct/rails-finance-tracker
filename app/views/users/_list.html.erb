<div class="mt-5">
  <span class="text-secondary">Friends list</span>
  <% @users.each do |user| %>
    <div class="card my-3">
      <div class="card-body row align-items-center">
        <div class="col-9 "> <%= gravatar_for(user, size: 50) %> <%= user.full_name %></div>
        <div class="col-3">
          <%= link_to 'Profile', user_path(user.id), class: "btn btn-sm btn-secondary" %>
          <% if  current_user.friends_with(user) %>
            <%= link_to "Unfollow", friendship_path(user), method: :delete, class: 'btn btn-sm btn-danger' %>
          <% else %>
            <%= link_to "Follow", friendships_path(friend: user), method: :post, class: 'btn btn-sm btn-success' %>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>
