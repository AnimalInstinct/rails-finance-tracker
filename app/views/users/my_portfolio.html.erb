<h1 class="pt-3 text-black">My portfolio</h1>
<span class="pt-2 text-black-50 font-weight-light"><%= @current_user.stocks.count %> stocks tracking</span>
<div class="search pt-5">
    <h4 class="mb-3">Search Stocks</h4>
    <%= form_tag search_stock_path, remote: true, method: :get do %>
    <div class="form-group row">
        <div class="col-sm-11 pr-0">
            <%= text_field_tag :stock, params[:stock], placeholder: "Stock ticker symbol", autofocus: true, class: "form-control form-control-lg" %>
        </div>
        <div class="col-sm-1 pl-0">
            <%= button_tag type: :submit, class: "btn btn-success btn-lg" do %>
            <%= fa_icon "search" %>
            <% end %>
        </div>
    </div>
    <% end %>
</div>
<div id="results">

</div>
<% if !@tracked_stocks.empty? %>
<%= render 'stocks/table' %>
<% end %>