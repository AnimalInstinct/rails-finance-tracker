<div class="row">
  <div class="col-3"><%= gravatar_for(@user, size: 200) %></div>
  <div class="col-9">
    <h1><%= @user.full_name %></h1>
    <span><%= @user.email%> </span>
    <p class="mt-4">
      <%= link_to 'Back', users_path, class: "btn btn-secondary" %>
      <% if !current_user.friends_with(@user) %>
        <%= link_to 'Follow', friendships_path(friend: @user), class: "btn btn-success", method: :post %>
      <% else %>
        <%= link_to "Unfollow", friendship_path(@user), method: :delete, class: 'btn btn-danger' %>
      <% end %>
    </p>
  </div>
</div>
